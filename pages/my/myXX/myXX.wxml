<view class='container'>
    <view class='user_xx'>
        <view class='user_jbxx'>
            <view>昵称</view>
            <view class='user_name'>{{wxUserInfo.nickName}}</view>
        </view>
        <view class='user_jbxx'>
            <view>* 年龄段</view>
            <view class='user_age'>
                <picker mode="selector"  bindchange="bindPickerChange" value="{{index}}" range="{{array}}">
                    <text>{{array[index]?array[index]:'请选择年龄段 >'}}</text>
                </picker>
            </view>
        </view>
        <view class='user_jbxx'>
            <view>* 性别</view>
            <view class='user_sex'>
                <picker mode="selector"  bindchange="bindPickerChange_sex" value="{{index_sex}}" range="{{array_sex}}">
                    <text>{{array_sex[index_sex]?array_sex[index_sex]:'请选择性别 >'}}</text>
                </picker>
            </view>
        </view>
        <view class='user_jbxx'>
            <view class='user_type'>身份</view>
            <view class='type_1'>
                {{wxUserInfo.position}}
            </view>
        </view>
        <view class='user_jbxx'>
            <view>* 语言</view>
            <view class='user_sex'>
                <picker mode="selector"  bindchange="bindPickerChange_language" value="{{index_language}}" range="{{array_language}}">
                    <text>{{array_language[index_language]?array_language[index_language]:'请选择语言 >'}}</text>
                </picker>
            </view>
        </view>
    </view>
    <view class='user_work'>
        <view>职业</view>
        <textarea class='work_xx' placeholder="{{wxUserInfo.occupation?'':'您的职业，20字以内'}}">{{wxUserInfo.occupation?wxUserInfo.occupation:""}}</textarea>
    </view>
    <view class='user_phone'>
        <view class='phone_name'>手机号</view>
        <block wx:if="{{sysUser.cellphone}}">
        <view class='phone_num'>{{sysUser.cellphone}}</view>
        <view class='phone_sty' bindtap='updatePhone' data-phone="{{sysUser.cellphone}}">修改手机号</view>
        </block>
        <block wx:else>
        <view class='phone_num'></view>
        <view class='phone_sty' bindtap='updatePhone'>绑定手机号</view>
        </block>
    </view>
    <view class='btn_cu'>
        <button>保存</button>
    </view>
</view>