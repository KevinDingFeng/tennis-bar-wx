<view class='container'>
    <view class="page">
        <view class="page__bd">
            <view class="weui-tab">
                <view class="weui-navbar">
                    <block wx:for="{{tabs}}" wx:key="*this">
                        <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick" data-status="{{params[index]}}">
                            <view class="weui-navbar__title">{{item}}</view>
                        </view>
                    </block>
                    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
                </view>
                <view class="weui-tab__panel">
                    <!-- 全部 -->
                    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                      <block wx:if="{{confirms.content.length > 0}}">
                        <block wx:for="{{confirms.content}}" wx:key="**this" wx:for-item="confirm">
                          <view class='list_xx'>
                            <view class='list_top'>
                                <view class='palce_name'>{{confirm.game.name}}</view>
                                <i class="sanj"></i>
                                <view class='palce_num'>
                                  <block wx:if="{{confirm.applyJoinGameStatus =='WaitingConfirm' }}">待确认</block>
                                  <block wx:if="{{confirm.applyJoinGameStatus =='Agree' }}">已确认</block>
                                </view>
                            </view>
                            <view class='list_center'>
                                <view class="palce_peo">发起人：{{confirm.game.organizer.nickName}}</view>
                                <view class='palce_time'>{{confirm.game.startTime}}-{{confirm.game.endTime}}</view>
                            </view>
                            <view class='list_bottom'>
                                <view class="palce_dz">球场：{{confirm.game.court.name}}</view>
                            </view>
                          </view>
                        </block>
                      </block>
                    </view>
                    <!-- 已同意 -->
                    <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                      <block wx:if="{{confirms.content.length > 0}}">
                        <block wx:for="{{confirms.content}}" wx:key="**this" wx:for-item="confirm">
                          <view class='list_xx'>
                            <view class='list_top'>
                                <view class='palce_name'>{{confirm.game.name}}</view>
                                <i class="sanj"></i>
                                <view class='palce_num'>待确认</view>
                            </view>
                            <view class='list_center'>
                                <view class="palce_peo">发起人：{{confirm.game.organizer.nickName}}</view>
                                <view class='palce_time'>{{confirm.game.startTime}}-{{confirm.game.endTime}}</view>
                            </view>
                            <view class='list_bottom'>
                                <view class="palce_dz">球场：{{confirm.game.court.name}}</view>
                            </view>
                          </view>
                        </block>
                      </block>
                    </view>
                    <!-- 已拒绝 -->
                    <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                      <block wx:if="{{confirms.content.length > 0}}">
                        <block wx:for="{{confirms.content}}" wx:key="**this" wx:for-item="confirm">
                          <view class='list_xx'>
                            <view class='list_top'>
                                <view class='palce_name'>{{confirm.game.name}}</view>
                                <i class="sanj1"></i>
                                <view class='palce_num1'>已确认</view>
                            </view>
                            <view class='list_center'>
                                <view class="palce_peo">发起人：{{confirm.game.organizer.nickName}}</view>
                                <view class='palce_time'>{{confirm.game.startTime}}-{{confirm.game.endTime}}</view>
                            </view>
                            <view class='list_bottom'>
                                <view class="palce_dz">球场：{{confirm.game.court.name}}</view>
                            </view>
                          </view>
                        </block>
                      </block>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>