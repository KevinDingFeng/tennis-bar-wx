<view class='container'>
    <view class="page">
        <view class="page__bd">
            <view class="weui-tab">
                <view class="weui-navbar">
                    <block wx:for="{{tabs}}" wx:key="*this">
                        <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                            <view class="weui-navbar__title">{{item}}</view>
                        </view>
                    </block>
                    <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
                </view>
                <view class="weui-tab__panel">
                    <!-- 全部 -->
                    <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                    </view>
                    <!-- 已同意 -->
                    <view class="weui-tab__content" hidden="{{activeIndex != 1}}">
                        <view class='list_xx'>
                            <view class='list_top'>
                                <view class='palce_name'>
                                    球局名称球局名称球局名称
                                </view>
                                <i class="sanj"></i>
                                <view class='palce_num'>待确认</view>
                            </view>
                            <view class='list_center'>
                                <view class="palce_peo">发起人：张三</view>
                                <view class='palce_time'>2018.08.15 11:26~16:30</view>
                            </view>
                            <view class='list_bottom'>
                                <view class="palce_dz">球场：球场名称球场名称球场名称球场名称球场名称</view>
                            </view>
                        </view>
                    </view>
                    <!-- 已拒绝 -->
                    <view class="weui-tab__content" hidden="{{activeIndex != 2}}">
                        <view class='list_xx'>
                            <view class='list_top'>
                                <view class='palce_name'>
                                    球局名称球局名称球局名称
                                </view>
                                <i class="sanj1"></i>
                                <view class='palce_num1'>已确认</view>
                            </view>
                            <view class='list_center'>
                                <view class="palce_peo">发起人：张三</view>
                                <view class='palce_time'>2018.08.15 11:26~16:30</view>
                            </view>
                            <view class='list_bottom'>
                                <view class="palce_dz">球场：球场名称球场名称球场名称球场名称球场名称</view>
                            </view>
                        </view>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>