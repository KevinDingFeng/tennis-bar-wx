<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:1000px;width:100%;">
    <swiper-item>
        <block wx:if="{{games.content.length > 0}}">
            <view class='list_xx' wx:for="{{games.content}}" wx:key="**this" wx:for-item="jgame">
              <block wx:if="{{jgame}}">
                <view class='list_top' bindtap="joinGameDetail" data-game="{{jgame.game}}">
                    <view class='palce_name f_wei'>{{jgame.game.name}}</view>
                    <i class="sanj"></i>
                    <view class='palce_num'>
                        <view wx:if="{{jgame.game.gameStatus =='Completed'}}">已结束</view>
                        <view wx:elif="{{jgame.game.gameStatus =='Canceled'}}">已取消</view>
                        <view wx:else>即将开始</view>
                    </view>
                </view>
                <view class='list_center'>
                    <view class="palce_peo">发起人：{{jgame.game.organizer.nickName}}</view>
                    <view class='palce_time'>{{jgame.game.startTime}} ~ {{util.formatDate(jgame.game.endTime)}}</view>
                </view>
                <view class='list_bottom'>
                    <view class="palce_dz">球场：{{jgame.game.court.name}}</view>
                    <view class='palce_dh' bindtap="openLocation" data-latitude="{{jgame.game.court.latitude}}" data-longitude="{{jgame.game.court.longitude}}">
                        <image src='../../../images/index/dw.png'></image>
                        <text>导航</text>
                    </view>
                </view>
              </block>
            </view>
        </block>
        <block wx:else>
            暂无数据
        </block>
    </swiper-item>
    <swiper-item>
        <block wx:if="{{games.content.length > 0}}">
            <view class='list_xx' wx:for="{{games.content}}" wx:key="**this" wx:for-item="game">
              <block wx:if="{{game}}">
                <view class='list_top' bindtap="releaseGameDetail" data-game="{{game}}">
                    <view class='palce_name f_wei'>{{game.name}}</view>
                    <i class="sanj"></i>
                    <view class='palce_num'>
                        <view wx:if="{{game.gameStatus =='Completed'}}">已结束</view>
                        <view wx:elif="{{game.gameStatus =='Canceled'}}">已取消</view>
                        <view wx:else>即将开始</view>
                    </view>
                </view>
                <view class='list_center'>
                    <view class="palce_peo">发起人：{{game.organizer.nickName}}</view>
                    <view class='palce_time'>{{game.startTime}} ~ {{util.formatDate(game.endTime)}}</view>
                </view>
                <view class='list_bottom'>
                    <view class="palce_dz">球场：{{game.court.name}}</view>
                    <view class='palce_dh' bindtap="openLocation" data-latitude="{{game.court.latitude}}" data-longitude="{{game.court.longitude}}">
                        <image src='../../../images/index/dw.png'></image>
                        <text>导航</text>
                    </view>
                </view>
              </block>
            </view>
        </block>
        <block wx:else>
            暂无数据
        </block>
    </swiper-item>
</swiper>