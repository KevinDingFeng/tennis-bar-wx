<view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" data-status="All" bindtap="swichNav">全部</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" data-status="Agree" bindtap="swichNav">已同意</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" data-status="Refuse" bindtap="swichNav">已拒绝</view>
</view>
 
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:1000px;width:100%">
  <swiper-item>
    全部
  </swiper-item>
  <swiper-item>
    已同意
  </swiper-item>
  <swiper-item>
    已拒绝
  </swiper-item>
</swiper>