/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}
/* 搜索 */
.page__bd{
    width: 100%;
}
.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-cell{
    padding: 12px 15px 12px 35px;
}
/* banner */
.index_banner{
    width: 100%;
    height: 186rpx;
}
.index_banner>image{
    width: 100%;
    height: 186rpx;
}
/* 三栏导航 */
.children_show{
    display: block;
}
.children_hide{
    display: none;
}
.index_search{
    width: 100%;
    background-color: #F5F5F5;
}
.nav{
    position: relative;
    z-index: 99;
    display: flex;
    padding: 15rpx 0 30rpx;
}
.nav-son{
    display: flex;
    flex: 1;
    text-align: center;
    height: 40px;
    align-items:center;
    justify-content:center;
    font-size: 14px;
}
.borders{
    border-left: 1px solid #e6e6e6;
    border-right: 1px solid #e6e6e6;
}
.content{
    display: inline-block;
    font-size: 28rpx;
}
.icon{
    display: inline-block;
    border: 4px solid transparent;
    border-top: 4px solid #424242;
    margin-left: 5px;
    margin-top: 4px;
}
.temp{
    position: relative;
    z-index: 4;
}
.temp1{
    display: none;
    width: 100%;
    max-height: 550rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height:100rpx;
    background: #fff;
}
.temp2{
    display: none;
    width: 100%;
    max-height: 750rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height:100rpx;
    background: #fff;
}
.slidedown{
    transform:  translateY(0%);
}
.temp view{
    border-bottom: 1px solid #d1d3d4;
    font-size: 14px;
}
.quyu{
    position: relative;
    display: none;
    height: 450rpx;
    z-index: 5;
}
.quyu .qy{
    overflow-y: scroll;
    float: left;
    width: 33.33%;
    height: 450rpx;
    line-height: 80rpx;
    box-sizing: border-box; 
    font-size: 14px;
    color: #717273;
}
.qy view{
    text-overflow: ellipsis;
    overflow: hidden; 
    white-space:nowrap;  
    padding-left: 15rpx; 
}
.quyu-left{
    background: #c5c5c5;
}
.quyu-center{
    background: #e0e0e0;
}
.quyu-right{
    background: #fff;
}
.quyu-right view{
    border-bottom: 1px solid #c5c5c5;
}
.current{
    background: #e0e0e0;
}
.current2{
    background: #fff;
}
.fullbg{
    position: fixed;
    top:0;
    z-index: 1;
    width: 100%;
    height: 100%;
    background: rgb(1, 1, 1);
    transition: all 2s;
    opacity: 0;
}
.fullopacity{
    opacity: .5;
}
.nav-son.active .content{
    color: #61beff;
}
.nav-son.active .icon{
    border-bottom: 4px solid #61beff;
    border-top:0;
}
@keyframes slidown{
    from{
        transform:  translateY(-100%);
    }
    to{
        transform:  translateY(0%);
    }
}

.slidown{
    display: block;
    /* animation: slidown .7s ease-in both; */
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.slidup{
    display: block;
    animation: slidup .7s ease-in both;
}
.disappear{
    display: none;
}
/* 时间选择 */
.section__title{
    display: inline-block;
    border-bottom:none!important;
    font-size: 30rpx!important;
    color: #222222!important;
}
picker{
    display: inline-block!important;
    width:70%;
    text-align:right;
    
}
.picker{
    border-bottom:none!important;
}
.check_time{
    border-bottom:1px solid #d1d3d4;
    padding: 30rpx 0;
}
.check_time view:nth-child(2){
    margin-left: 42rpx;
}
.time_type{
    display: inline-block;
    border-radius: 10px;
	border: solid 1px #e4e4e4;
    text-align: center;
    margin-right: 21rpx;
    padding: 0 37rpx;
    font-size: 28rpx!important;
    color: #424242;
}
.time_name{
    display: inline-block;
    border-bottom:none!important;
    font-size: 30rpx!important;
    color: #222222!important;
}
.active_time{
    color: #56a41f!important;
    background-color: #e4ffd1!important;
}
